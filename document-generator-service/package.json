{
  "name": "document-generator-service",
  "version": "1.0.0",
  "description": "A service to generate AsciiDoc documents",
  "main": "dist/server.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "lint:fix": "./node_modules/.bin/eslint --fix 'src/**/*.ts'",
    "lint": "./node_modules/.bin/eslint 'src/**/*.ts'",
    "tsc": "tsc",
    "build": "npm-run-all clean lint tsc",
    "dev:start": "npm-run-all build start",
    "dev": "nodemon --watch src -e ts --exec npm run dev:start",
    "start:dev": "ts-node-dev --respawn --transpileOnly --inspect -r dotenv/config -- ./src/server.ts",
    "start": "node .",
    "test:dev": "mocha -r ts-node/register -r source-map-support/register --recursive -w --watch-extensions ts --watch-dirs src/test **/*.spec.ts",
    "test": "mocha -r ts-node/register -r source-map-support/register --recursive --exit src/test/**/*.spec.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jaeger-client": "^3.17.0",
    "opentracing": "^0.14.4"
  },
  "devDependencies": {
    "@types/chai": "^4.2.4",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/jaeger-client": "^3.15.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^6.6.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-mocha": "^6.2.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "ts-node": "^8.4.1",
    "ts-node-dev": "^1.0.0-pre.43",
    "typescript": "^3.6.4"
  }
}
